<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_intro.ResultExperienceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="피부 상처 결과"
            android:fontFamily="@font/nanumsquare_aceb"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="70dp"/>
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 피부 상처는 \u0022긁힘\u0022 상처 입니다."
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:shadowColor="#c7c7c7"
            android:textAlignment="center"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/result_blur_text_70" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전문가의 자세한 조언을 얻고 싶다면 \n서비스를 가입 후 이용해주세요."
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_acb"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <android.widget.Button
            android:id="@+id/adviserRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADVISER 회원가입"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="@drawable/example_background"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>